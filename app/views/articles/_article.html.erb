<div class="border border-sky-100 rounded-lg p-4 mb-4">
  <h2><%= link_to article.title, article, class: "font-semibold text-lg text-blue-600" %></h2>
  <p><%= article.body %></p>

  <div class="w-1/4 pt-2">
    <% article.addresses.each do |article| %>
      <p class="border border-sky-300 rounded-lg px-1 mb-1"><%= article.street_address %></p>
    <% end %>
  </div>
</div>
